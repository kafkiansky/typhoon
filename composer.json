{
    "description": "Typhoon Monorepo",
    "license": "MIT",
    "type": "project",
    "authors": [
        {
            "name": "Valentin Udaltsov",
            "email": "udaltsov.valentin@gmail.com"
        }
    ],
    "require": {
        "php": "^8.1",
        "nikic/php-parser": "^4.15 || ^5.0",
        "phpstan/phpdoc-parser": "^1.0",
        "psr/simple-cache": "^3.0",
        "symfony/deprecation-contracts": "^3.4"
    },
    "require-dev": {
        "bamarni/composer-bin-plugin": "^1.8.2",
        "dragon-code/benchmark": "^3",
        "ergebnis/composer-normalize": "^2.42.0",
        "friendsofphp/php-cs-fixer": "^3.52.1",
        "jetbrains/phpstorm-stubs": "^2023.3",
        "mikey179/vfsstream": "^1.6.11",
        "mockery/mockery": "^1.6.11",
        "phpstan/phpstan": "^1.11@dev",
        "phpunit/phpunit": "^11.1.1",
        "phpyh/coding-standard": "^2.6.1",
        "qossmic/deptrac-shim": "^1.0.2",
        "symfony/var-dumper": "^6.4.4 || ^7.0.6",
        "typhoon/opcache": "^0.2.1"
    },
    "autoload": {
        "psr-4": {
            "Typhoon\\": "src/"
        },
        "files": [
            "src/TypeComparator/functions.php",
            "src/TypeStringifier/functions.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "Typhoon\\": "tests/"
        }
    },
    "config": {
        "allow-plugins": {
            "bamarni/composer-bin-plugin": true,
            "ergebnis/composer-normalize": true
        },
        "sort-packages": true
    },
    "extra": {
        "bamarni-bin": {
            "bin-links": false,
            "forward-command": true,
            "target-directory": "tools"
        }
    },
    "scripts": {
        "deptract": "deptrac analyse --cache-file=var/.deptrac.cache",
        "fixcs": [
            "php-cs-fixer fix -v",
            "php-cs-fixer fix --config=.sort.php-cs-fixer.dist.php -v"
        ],
        "phpstan": "phpstan -v",
        "pre-command-run": "mkdir -p var",
        "psalm": "tools/psalm/vendor/bin/psalm --show-info --no-diff",
        "test": "phpunit"
    }
}
